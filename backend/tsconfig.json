{
	"compilerOptions": {
		"target": "ES2015",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended",
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
